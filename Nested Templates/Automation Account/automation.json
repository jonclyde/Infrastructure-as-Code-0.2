{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "identifier": {
            "type": "string",
            "defaultValue": "core"
        },
        "EnvironmentIdentifier": {
            "type": "string"
        },
        "DefaultUsername": {
            "type": "string"
        },
        "DefaultPw": {
            "type": "securestring"
        },
        "dscConfigurations": {
            "type": "array"
        },
        "AutomationStorageAccount": {
            "type": "string"
        }
    },
    "variables": {
        "a-accname": "[concat('aa-',parameters('EnvironmentIdentifier'),'-',parameters('identifier'),'-aut-01')]",
        "DscBlobContainer": "[concat('https://',parameters('AutomationStorageAccount'),'.blob.core.windows.net/dscconfigurations/')]",
        "DomainJoinUN": "[concat('jcly.de','\\',parameters('DefaultUsername'))]",
        "dscResources": {
            "xActiveDirectory": {
                "name": "xActiveDirectory",
                "url": "https://www.powershellgallery.com/packages/xActiveDirectory/3.0.0.0"
            },
            "xStorage": {
                "name": "xStorage",
                "url": "https://www.powershellgallery.com/packages/xStorage/3.4.0.0"
            },
            "xDSCDomainJoin": {
                "name": "xDSCDomainJoin",
                "url": "https://www.powershellgallery.com/packages/xDSCDomainjoin/1.2.23"
            },
            "ComputerManagementDsc": {
                "name": "ComputerManagementDsc",
                "url": "https://www.powershellgallery.com/packages/ComputerManagementDsc/8.0.0"
            }            
        }
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "name": "[variables('a-accname')]",
            "location": "westeurope",
            "properties": {
                "Sku": {
                    "name": "OMS"
                }
            }
        },
        {
            "name": "[concat(variables('a-accname'),'/domainJoinCredential')]",
            "type": "Microsoft.Automation/automationAccounts/credentials",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "userName": "[variables('DomainJoinUN')]",
                "password": "[parameters('DefaultPw')]"
            }
        },
        {
            "name": "[concat(variables('a-accname'),'/domainCredential')]",
            "type": "Microsoft.Automation/automationAccounts/credentials",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "userName": "[parameters('DefaultUsername')]",
                "password": "[parameters('DefaultPw')]"
            }
        },
        {
            "name": "[concat(variables('a-accname'),'/safeModeCredential')]",
            "type": "Microsoft.Automation/automationAccounts/credentials",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "userName": "[parameters('DefaultUsername')]",
                "password": "[parameters('DefaultPw')]"
            }
        },
        {
            "name": "[variables('dscResources').xActiveDirectory.name]",
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "contentLink": {
                    "uri": "[variables('dscResources').xActiveDirectory.url]"
                }
            }
        },
        {
            "name": "[variables('dscResources').xStorage.name]",
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "contentLink": {
                    "uri": "[variables('dscResources').xStorage.url]"
                }
            }
        },
        {
            "name": "[variables('dscResources').xDSCDomainJoin.name]",
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "contentLink": {
                    "uri": "[variables('dscResources').xDSCDomainJoin.url]"
                }
            }
        },
        {
            "name": "[variables('dscResources').ComputerManagementDsc.name]",
            "type": "Microsoft.Automation/automationAccounts/modules",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "contentLink": {
                    "uri": "[variables('dscResources').ComputerManagementDsc.url]"
                }
            }
        },
        {
            "name": "[concat(variables('a-accname'),'/',parameters('dscConfigurations')[CopyIndex()].ConfigName)]",
            "type": "Microsoft.Automation/automationAccounts/configurations",
            "apiVersion": "2018-01-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('a-accname')]"
            ],
            "properties": {
                "state": "Published",
                "overwrite": "true",
                "source": {
                    "type": "uri",
                    "value": "[concat(variables('DscBlobContainer'),parameters('dscConfigurations')[CopyIndex()].ConfigFileName)]"
                }
            },
            "copy": {
                "name": "configurations",
                "count": "[length(parameters('dscConfigurations'))]",
                "mode": "Serial"
            }
        },
        {
            "name": "[concat(variables('a-accname'),'/compilation',parameters('dscConfigurations')[CopyIndex()].ConfigName)]",
            "type": "Microsoft.Automation/automationAccounts/compilationjobs",
            "apiVersion": "2018-01-15",
            "tags": {},
            "dependsOn": [
                "[variables('a-accname')]",
                "[parameters('dscConfigurations')[CopyIndex()].ConfigName]",
                "[variables('dscResources').xActiveDirectory.name]",
                "[variables('dscResources').xStorage.name]",
                "[variables('dscResources').xDSCDomainJoin.name]",
                "[variables('dscResources').ComputerManagementDsc.name]"
            ],
            "properties": {
                "configuration": {
                    "name": "[parameters('dscConfigurations')[CopyIndex()].ConfigName]"
                },
                "parameters": {}
            },
            "copy": {
                "name": "compilation",
                "count": "[length(parameters('dscConfigurations'))]",
                "mode": "Serial"
            }
        }
    ],
    "outputs": {}
}