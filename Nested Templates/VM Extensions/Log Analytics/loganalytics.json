{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Identifier": {
            "type": "string"
        },
        "VNAddressRangePrimary": {
            "type": "string"
        },
        "VNAddressRangeDR": {
            "type": "string"
        },
        "SubnetstoDeploy": {
            "type": "array"
        },
        "Services": {
            "type": "array"
        },
        "VMstoDeploy": {
            "type": "array"
        },
        "DataDiskstoDeploy": {
            "type": "array"
        },
        "DSCConfigurations": {
            "type": "array"
        },
        "ServiceIdentifier": {
            "type": "string"
        },
        "DefaultPw": {
            "type": "string"
        },
        "workspaceID":{
            "type": "string"
        },
        "workspaceName":{
            "type": "string"
        },
        "workspaceRG":{
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('VMstoDeploy')[CopyIndex()].VMName,'/OMSWorkspace')]",
            "apiVersion": "2019-07-01",
            "location": "[resourceGroup().location]",
            "condition": "[equals(parameters('VMstoDeploy')[CopyIndex()].serviceIdentifier,parameters('serviceidentifier'))]",
            "properties": {
                "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                "type": "MicrosoftMonitoringAgent",
                "typeHandlerVersion": "1.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
			        "workspaceId": "[parameters('workspaceId')]"
                },
                "protectedSettings": {
                    "workspaceKey": "[listKeys(resourceId(parameters('workspaceRG'),'Microsoft.OperationalInsights/workspaces', parameters('workspaceName')), '2015-11-01-preview').primarySharedKey]"
                }
            },
            "copy": {
                "name": "loganalytics",
                "count": "[length(parameters('VMstoDeploy'))]"
            }
        }
    ],
    "outputs": {},
    "functions": []
}